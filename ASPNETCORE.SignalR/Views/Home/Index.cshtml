@{
    ViewData["Title"] = "Realtime Order & Update";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>   
</div>
<div class="container">   
    <form>
        <div class="row">
            <div class="form-group col-md-6">
                <label htmlFor="product">What's your order?</label>
                <input type="text"
                       id="product"
                       class="form-control"
                       value="Americano" />
            </div>
            <div class="form-group col-md-6">
                <label htmlFor="size">Size</label>
                <input type="text"
                       id="size"
                       class="form-control"
                       value="Vente" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <button id="submit" type="submit" class="btn btn-primary">
                    Submit
                </button>
            </div>
            <div class="col-md-6">
                <div id="status"></div>
            </div>
        </div>
    </form>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/Order.js"></script>
